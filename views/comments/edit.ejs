<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <h1 class="text-center">Edit comment</h1>
      <section class="form-block">
        <form id="edit-comment-form" action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <textarea class="form-control" name="comment[text]" form="edit-comment-form" rows="5" cols="70" required><%= comment.text %></textarea>
          </div>
          <button class="btn btn-success btn-lg btn-block">Save</button>
          <hr>
          <a href="/campgrounds">Back to campgrounds</a>
        </form>
      </section>
    </div>
  </div>

<% include ../partials/footer %>
